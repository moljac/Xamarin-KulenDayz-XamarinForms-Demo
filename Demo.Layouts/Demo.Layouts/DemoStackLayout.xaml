<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Demo.Layouts.DemoStackLayout">
		
	<StackLayout>

		<StackLayout
			Orientation="Vertical"
			>
			<Label
				Text="Data:"
			>
			</Label>
			<Entry
				Placeholder="data"
			>
			</Entry>
			<Button
				Text="Send"
			>
			</Button>
		</StackLayout>

		<StackLayout
			Orientation="Horizontal"
			>
			<Label
				Text="Data:"
			>
			</Label>
			<Entry
				Placeholder="data"
			>
			</Entry>
			<Button
				Text="Send"
			>
			</Button>
		</StackLayout>

	</StackLayout>

	
</ContentPage>